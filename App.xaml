<Application x:Class="Sokoban.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Sokoban"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="GameBackground" Color="#26180C"/>
        <SolidColorBrush x:Key="CorrectPositionColor" Color="#4FB137"/>
        <SolidColorBrush x:Key="LightBorderBrushColor" Color="#F2E5D5"/>
        <SolidColorBrush x:Key="BoxColor" Color="#8C600D"/>
        <SolidColorBrush x:Key="DarkBorderBrushColor" Color="#8C7608"/>
        <SolidColorBrush x:Key="PinkColor" Color="#D96A6A"/>
    </Application.Resources>
</Application>
